<h1>Purchase Order</h1>
<%= link_to 'Coins', coins_path %>
<%= link_to 'Purchase Orders', purchase_orders_path %>
<p>
  Coin<br>
  <%= @purchaseOrder.coin.coinName %> (<%= @purchaseOrder.coin.symbol %>)
</p>
<%= form_with scope: :purchaseOrder, url: purchase_orders_path, local: true do |form| %>
  <p>
    <%= form.label :quantity %><br>
    <%= form.number_field :quantity, in: 0.0..100.0, step: 0.01, id: 'quantity-field', :onchange => 'updatePrice()' %>
    <%= fields_for :coin do |coin_form| %>
      <%= coin_form.hidden_field :id %>
    <% end %>
  </p>
  <p>
    <span id="quantity">1</span>
    x $ <span id="price"><%= @purchaseOrder.coin.price %></span> = $
    <span id="total"><%= @purchaseOrder.coin.price %></span>
  </p>
  <p>
    <%= form.submit value="Buy"%>
  </p>
<% end %>
